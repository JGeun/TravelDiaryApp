<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/upload_viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@null"
            app:ci_drawable="@drawable/pager_indicator_tab_selector"
            app:ci_height="5dp"
            app:ci_margin="4dp"
            app:ci_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upload_viewPager" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/day_select_layout"
            android:layout_width="144dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indicator">

            <TextView
                android:id="@+id/atp_tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1일차 일기" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_down_btn"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/atp_tv_days"
                app:layout_constraintTop_toTopOf="@id/atp_tv_days"
                app:layout_constraintBottom_toBottomOf="@id/atp_tv_days"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload_diary_commitbtn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radius_whitebtn"
            android:text="사진 추가"
            android:textSize="12sp"
            android:fontFamily="@font/main_font2"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/day_select_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/day_select_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/day_select_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_diary_contents"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp">

        <EditText
            android:id="@+id/upload_contents"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@null"
            android:gravity="top"
            android:hint="일기를 작성해주세요."
            android:fontFamily="@font/main_font2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/day_select_layout"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>