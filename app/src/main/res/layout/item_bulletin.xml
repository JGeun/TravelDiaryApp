<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/btItem_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btItem_iv_thumbnail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btItem_iv_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/btItem_cardview"
        app:layout_constraintStart_toEndOf="@id/btItem_cardview"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="준호예요~"
        android:textSize="12sp"
        android:textColor="@color/nickname_color"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/btItem_iv_user"
        app:layout_constraintBottom_toBottomOf="@id/btItem_iv_user"
        app:layout_constraintStart_toEndOf="@id/btItem_iv_user" />

    <TextView
        android:id="@+id/btItem_tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="adsadadasdasdasdas"
        android:gravity="center"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/btItem_tv_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btItem_cardview"
        app:layout_constraintTop_toTopOf="@id/btItem_cardview"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/btItem_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="#부산 #해운대"
        android:textSize="10sp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/btItem_iv_user"
        app:layout_constraintStart_toEndOf="@id/btItem_cardview"/>

    <TextView
        android:id="@+id/btItem_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btItem_iv_comment"
        app:layout_constraintBottom_toBottomOf="@id/btItem_cardview"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/btItem_iv_comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@id/btItem_tv_comment"
        app:layout_constraintBottom_toBottomOf="@id/btItem_cardview"
        app:srcCompat="@drawable/comment"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/btItem_tv_likecnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btItem_iv_like"
        app:layout_constraintBottom_toBottomOf="@id/btItem_iv_like"
        app:layout_constraintEnd_toStartOf="@id/btItem_iv_comment"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/btItem_iv_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btItem_cardview"
        app:layout_constraintEnd_toStartOf="@id/btItem_tv_likecnt"
        app:srcCompat="@drawable/emptyheart"
        android:layout_marginEnd="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

