<?xml version="1.0"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    app:strokeColor="#A2A2A2"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/btItem_userImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/btItem_cardview"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/btItem_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="TextView"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font2"
            app:layout_constraintBottom_toBottomOf="@+id/btItem_userImage"
            app:layout_constraintStart_toEndOf="@+id/btItem_userImage"
            app:layout_constraintTop_toTopOf="@id/btItem_userImage" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btItem_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btItem_userImage">

            <ImageView
                android:id="@+id/btItem_iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_profile" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/btItem_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="end"
            android:ems="10"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/main_font2"
            app:layout_constraintStart_toStartOf="@+id/btItem_cardview"
            app:layout_constraintTop_toBottomOf="@+id/btItem_cardview"
            tools:text="다이어리 제목" />

        <TextView
            android:id="@+id/btItme_tv_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btItem_tv_title"
            tools:text="asdasdasdasdasdasdasdasdasdasdasdasd" />

        <View
            android:id="@+id/btItem_line"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:background="#C1C1C1"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btItme_tv_contents" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btItem_line">

            <ImageView
                android:id="@+id/btItem_iv_like"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                app:srcCompat="@drawable/emptyheart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/btItem_tv_likecnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/btItem_iv_like"
                android:text="23"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btItem_iv_like"/>

            <ImageView
                android:id="@+id/btItem_iv_comment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="14dp"
                android:layout_toStartOf="@+id/btItem_tv_comment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btItem_tv_likecnt"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/comment" />

            <TextView
                android:id="@+id/btItem_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="253dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btItem_iv_comment" />

            <ImageView
                android:id="@+id/btItem_iv_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/btItem_tv_sharepeople"
                app:layout_constraintLeft_toLeftOf="@+id/btItem_tv_sharepeople"
                app:srcCompat="@drawable/ic_share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btItem_tv_sharepeople" />

            <TextView
                android:id="@+id/btItem_tv_sharepeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="253dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>