<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/item_plan_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_graybook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_plan_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLength="13"
        android:maxLines="1"
        android:text="부산 힐링 여행 아아아아아아아아"
        android:fontFamily="@font/main_font2"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_plan_image"
        app:layout_constraintTop_toTopOf="@id/item_plan_image" />

    <TextView
        android:id="@+id/item_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="12"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_plan_title"
        app:layout_constraintStart_toStartOf="@id/item_plan_title"/>

    <TextView
        android:id="@+id/item_start_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jul"
        android:textSize="12sp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/item_start_date"
        app:layout_constraintTop_toTopOf="@id/item_start_date"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@id/item_start_month"
        app:layout_constraintTop_toBottomOf="@id/item_plan_title"
        android:layout_marginStart="7dp"/>

    <TextView
        android:id="@+id/item_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textSize="12dp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/item_start_date"/>

    <TextView
        android:id="@+id/item_end_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jul"
        android:textSize="12sp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/item_start_date"
        app:layout_constraintStart_toEndOf="@id/item_end_date"/>

    <ImageView
        android:id="@+id/item_check"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_dots2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_plan_image"
        app:layout_constraintBottom_toBottomOf="@id/item_plan_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>