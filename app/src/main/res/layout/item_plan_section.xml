<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="20dp"
    android:paddingEnd="40dp"
    android:paddingVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_plan_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_graybook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부산 힐링 여행"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_plan_image"
        app:layout_constraintEnd_toStartOf="@id/start_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jul"
        app:layout_constraintEnd_toEndOf="@+id/start_date"
        app:layout_constraintStart_toStartOf="@+id/start_date"
        app:layout_constraintTop_toTopOf="@id/item_plan_image" />

    <TextView
        android:id="@+id/end_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jul"
        app:layout_constraintEnd_toEndOf="@+id/end_date"
        app:layout_constraintStart_toStartOf="@+id/end_date"
        app:layout_constraintTop_toTopOf="@id/item_plan_image" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="28dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/start_month"
        app:layout_constraintEnd_toStartOf="@id/textView"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="~"
        app:layout_constraintTop_toTopOf="@id/start_date"
        app:layout_constraintBottom_toBottomOf="@id/start_date"
        app:layout_constraintEnd_toStartOf="@id/end_date"/>

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="18"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_month"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#676767"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>