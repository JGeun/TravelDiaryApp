<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="30dp">

    <ImageView
        android:id="@+id/dot_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/purple_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/top_bar"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_marginBottom="3dp"
        android:background="@color/purple"
        app:layout_constraintEnd_toEndOf="@+id/dot_img"
        app:layout_constraintStart_toStartOf="@+id/dot_img"
        app:layout_constraintBottom_toTopOf="@+id/dot_img" />

    <View
        android:id="@+id/bottom_bar"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:background="@color/purple"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/dot_img"
        app:layout_constraintStart_toStartOf="@+id/dot_img"
        app:layout_constraintTop_toBottomOf="@+id/dot_img" />

    <TextView
        android:id="@+id/item_schedule_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_font2"
        android:text="지역이름"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_schedule_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_trash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>